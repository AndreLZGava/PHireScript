{
    "name": "phire-scrip/phire-scrip",
    "description": "This is a custom PHP transpiler",
    "type": "project",
    "scripts": {
        "refactor": "vendor/bin/rector process",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes",
        "analyse": [
            "vendor/bin/phpstan analyse",
            "vendor/bin/phpmd src text phpmd.xml"
        ],
        "quality": [
            "@refactor",
            "@format",
            "@analyse"
        ]
    },
    "require": {
        "php": ">=8.1",
        "nikic/php-parser": "^5.0"
    },
    "autoload": {
        "psr-4": {
            "PHireScript\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PHireScript\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Andr√© Luiz Gava",
            "email": "andrelzgava@gmail.com"
        }
    ],
    "require-dev": {
        "phpunit/phpunit": "^12.5",
        "squizlabs/php_codesniffer": "^4.0",
        "phpstan/phpstan": "^2.1",
        "phpmd/phpmd": "^2.15",
        "rector/rector": "^2.3",
        "friendsofphp/php-cs-fixer": "^3.92"
    }
}
