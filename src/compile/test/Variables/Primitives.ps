var idAsString = String(12345)                 // Casting: becomes "12345"

// --- 2. Int Type ---
var userAge = 25                               // Inference: Int
var ageFromText = Int("30")                    // Casting: becomes 30

// --- 3. Float Type ---
var productPrice = 250.99                      // Inference: Float
var taxValue = Float("0.15")                   // Casting: becomes 0.15

// --- 4. Bool Type ---
