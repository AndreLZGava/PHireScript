<?php
require 'vendor/autoload.php';

use PHPScript\Compiler;
use PHPScript\Core\CompileMode;
use PHPScript\Core\CompilerContext;

$file = $argv[1];

if (!file_exists($file)) {
    die("File not found: $file\n");
}


$context = new CompilerContext(
    CompileMode::DEBUG,
    true,
    file: $file
);

$compiler = new Compiler($context);
$compiler->compile();
